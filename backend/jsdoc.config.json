{
  "source": {
    "include": ["./src"],
    "includePattern": "\\.(js|jsx)$",
    "exclude": ["node_modules"]
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "template": "node_modules/docdash"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true,
      "includeDate": true,
      "useLongnameInNav": true
    },
    "docdash": {
      "static": true,
      "sort": true,
      "meta": {
        "title": "CareRoute Backend API Documentation",
        "description": "API documentation for CareRoute backend services, controllers, and routes",
        "keyword": "care-route, api, documentation"
      },
      "search": true,
      "collapse": false,
      "wrap": false,
      "typedefs": true,
      "navLevel": 2,
      "private": false,
      "removeQuotes": "none",
      "menu": {
        "Project": {
          "href": "https://github.com/your-org/care-route-sg",
          "name": "GitHub Repository",
          "target": "_blank",
          "class": "menu-item"
        }
      }
    }
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  }
}

